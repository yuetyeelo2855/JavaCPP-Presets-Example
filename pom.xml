<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.gnp</groupId>
    <artifactId>javacpp-presets-example</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <packaging>jar</packaging>

    <name>JavaCPP-Presets-Example</name>
    <description>Demo project for JavaCPP</description>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>1.4.0.RELEASE</version>
        <relativePath/> <!-- lookup parent from repository -->
    </parent>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <java.version>1.8</java.version>
        <javacpp.version>1.2</javacpp.version>
        <javacv.version>1.2</javacv.version>
        <opencv.version>3.1.0</opencv.version>
        <ffmpeg.version>3.1.2</ffmpeg.version>
        <platform.name>${os.name}-${os.arch}</platform.name>
        <javacpp.platform>${platform.name}</javacpp.platform>
        <log4j.file>${project.basedir}\log\${project.build.finalName}.log</log4j.file>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter</artifactId>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>

        <!-- javacpp -->
        <dependency>
            <groupId>org.bytedeco</groupId>
            <artifactId>javacpp</artifactId>
            <version>${javacpp.version}</version>
        </dependency>

        <!-- openCV -->
        <dependency>
            <groupId>org.bytedeco</groupId>
            <artifactId>javacv</artifactId>
            <version>${javacv.version}</version>
        </dependency>
        <dependency>
            <groupId>org.bytedeco.javacpp-presets</groupId>
            <artifactId>opencv</artifactId>
            <version>${opencv.version}-${javacpp.version}</version>
            <classifier>${platform.name}</classifier>
        </dependency>
        <dependency>
            <groupId>org.bytedeco.javacpp-presets</groupId>
            <artifactId>ffmpeg</artifactId>
            <version>${ffmpeg.version}-${javacpp.version}</version>
        </dependency>
        <dependency>
            <groupId>org.bytedeco.javacpp-presets</groupId>
            <artifactId>ffmpeg</artifactId>
            <version>${ffmpeg.version}-${javacpp.version}</version>
            <classifier>${platform.name}</classifier>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>DEV</id>
            <properties>
                <database.host>localhost</database.host>
                <database.port>3306</database.port>
                <database.name>durable-active-mq-test</database.name>
                <database.url>jdbc:mysql://${database.host}:${database.port}/${database.name}</database.url>
                <database.username>root</database.username>
                <database.password>lagewXnzXKXwuM</database.password>
                <database.driver>com.mysql.jdbc.Driver</database.driver>
                <config.mq.host>127.0.0.1</config.mq.host>
                <config.mq.port>61616</config.mq.port>
                <config.mq.user>admin</config.mq.user>
                <config.mq.pass>admin</config.mq.pass>
                <log4j.file>C://gnp//log//${project.build.finalName}.log</log4j.file>
            </properties>
        </profile>
        <profile>
            <id>PRODUCTION</id>
            <properties>
                <database.host>localhost</database.host>
                <database.port>3306</database.port>
                <database.name>durable-active-mq</database.name>
                <database.url>jdbc:mysql://${database.host}:${database.port}/${database.name}</database.url>
                <database.username>root</database.username>
                <database.password>lagewXnzXKXwuM</database.password>
                <database.driver>com.mysql.jdbc.Driver</database.driver>
                <config.mq.host>127.0.0.1</config.mq.host>
                <config.mq.port>61616</config.mq.port>
                <config.mq.user>admin</config.mq.user>
                <config.mq.pass>admin</config.mq.pass>
            </properties>
        </profile>
        <profile>
            <id>linux</id>
            <activation>
                <os>
                    <name>linux</name>
                </os>
            </activation>
            <properties>
                <os.name>linux</os.name>
            </properties>
        </profile>
        <profile>
            <id>macosx</id>
            <activation>
                <os>
                    <name>mac os x</name>
                </os>
            </activation>
            <properties>
                <os.name>macosx</os.name>
            </properties>
        </profile>
        <profile>
            <id>windows</id>
            <activation>
                <os>
                    <family>windows</family>
                </os>
            </activation>
            <properties>
                <os.name>windows</os.name>
            </properties>
        </profile>
        <profile>
